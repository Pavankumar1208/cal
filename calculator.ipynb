    "import tkinter as tk\n",
    "import math ,
    "\n",
    "class Calculator:\n",
    "\n",
    "    def __init__(self, root):\n",
    "        self.root = root\n",
    "        self.root.title(\"Calculator\")\n",
    "\n",
    "        self.current_input = \"\"\n",
    "        self.result_var = tk.StringVar()\n",
    "\n",
    "        self.create_widgets()\n",
    "\n",
    "    def create_widgets(self):\n",
    "        display = tk.Entry(self.root, textvariable=self.result_var, font=(\"Arial\", 24), bd=10, insertwidth=4, width=14, justify='right', bg=\"#e0e0e0\")\n",
    "        display.grid(row=0, column=0, columnspan=4)\n",
    "\n",       
    "        color_dict = {\n",
    "            'number': '#f4f4f4',\n",
    "            'operator': '#d4d4d4',\n",
    "            'other': '#c4c4c4'\n",
    "        }\n",
    "\n",
    "        # Buttons and their respective colors\n",
    "        buttons = [\n",
    "            ('7', 'number'), ('8', 'number'), ('9', 'number'), ('/', 'operator'),\n",
    "            ('4', 'number'), ('5', 'number'), ('6', 'number'), ('*', 'operator'),\n",
    "            ('1', 'number'), ('2', 'number'), ('3', 'number'), ('-', 'operator'),\n",
    "            ('0', 'number'), ('.', 'other'), ('+', 'operator'), ('=', 'other'),\n",
    "            ('(', 'other'), (')', 'other'), ('^', 'operator'), ('√', 'other'),\n",
    "            ('C', 'other'), ('DEL', 'other')\n",
    "        ]\n",
    "\n",
    "        row_val = 1\n",
    "        col_val = 0\n",
    "        for button, btype in buttons:\n",
    "            color = color_dict[btype]\n",
    "            tk.Button(self.root, text=button, bg=color, padx=20, pady=20, font=(\"Arial\", 18), command=lambda b=button: self.on_button_click(b)).grid(row=row_val, column=col_val)\n",
    "            col_val += 1\n",
    "            if col_val > 3:\n",
    "                col_val = 0\n",
    "                row_val += 1\n",
    "\n",
    "    def on_button_click(self, char):\n",
    "        if char == '=':\n",
    "            self.current_input = self.current_input.replace('^', '**')\n",
    "            try:\n",
    "                self.current_input = str(eval(self.current_input))\n",
    "            except:\n",
    "                self.current_input = \"Error\"\n",
    "        elif char == 'C':\n",
    "            self.current_input = \"\"\n",
    "        elif char == '√':\n",
    "            try:\n",
    "                self.current_input = str(math.sqrt(float(self.current_input)))\n",
    "            except:\n",
    "                self.current_input = \"Error\"\n",
    "        elif char == 'DEL':\n",
    "            self.current_input = self.current_input[:-1]\n",
    "        else:\n",
    "            self.current_input += str(char)\n",
    "        self.result_var.set(self.current_input)\n",
    "\n",
    "if __name__ == \"__main__\":\n",
    "    root = tk.Tk()\n",
    "    calculator = Calculator(root)\n",
    "    root.mainloop()"
   ]
